# 企业级RAG系统环境变量配置模板
# 复制此文件为 .env 并填入实际值

# ============================================================
# 应用配置
# ============================================================
DEBUG=false
LOG_LEVEL=INFO

# ============================================================
# Embedding 配置
# ============================================================
EMBEDDING_PROVIDER=sentence_transformer
EMBEDDING_MODEL=all-MiniLM-L12-v2
EMBEDDING_DIMENSION=384

# 如果使用OpenAI Embedding
# EMBEDDING_PROVIDER=openai
# EMBEDDING_MODEL=text-embedding-3-small

# ============================================================
# LLM 配置
# ============================================================
LLM_PROVIDER=deepseek
LLM_MODEL=deepseek-v3-0324
LLM_API_KEY=your_api_key_here
LLM_BASE_URL=http://api.lkeap.cloud.tencent.com/v1
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=60

# 如果使用OpenAI
# LLM_PROVIDER=openai
# LLM_MODEL=gpt-4o-mini
# LLM_API_KEY=your_openai_api_key

# ============================================================
# 向量存储配置
# ============================================================
VECTOR_STORE_PROVIDER=milvus
VECTOR_STORE_ENDPOINT=./data/milvus_rag.db
VECTOR_STORE_COLLECTION=rag_knowledge

# ============================================================
# 搜索服务配置
# ============================================================
SEARCH_PROVIDER=google
SEARCH_GOOGLE_API_KEY=your_google_api_key
SEARCH_GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id
SEARCH_TIMEOUT=10
SEARCH_MAX_RESULTS=10

# ============================================================
# RAG 配置
# ============================================================
RAG_SIMILARITY_THRESHOLD=0.5
RAG_TOP_K=10
RAG_ENABLE_RERANK=true
RAG_ENABLE_WEB_SEARCH=true
RAG_ENABLE_QUERY_REWRITE=true
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
RAG_CHUNKING_STRATEGY=semantic

# ============================================================
# 服务器配置
# ============================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_WORKERS=1
SERVER_RELOAD=false
SERVER_LOG_LEVEL=INFO
